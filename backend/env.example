# IntelliClaim Environment Configuration
# Copy this file to .env and fill in your actual values

# Required: Google Gemini API Key
GOOGLE_API_KEY=your_gemini_api_key_here

# Environment Configuration
ENVIRONMENT=production
RENDER=true

# Render-specific Configuration
# PORT is automatically set by Render (don't change this)
# PORT=8000

# Storage Directories (can be customized)
CHROMA_PERSIST_DIR=./chroma_db
UPLOAD_DIR=./uploads
FAISS_CACHE_DIR=./faiss_cache

# File Processing Limits
MAX_FILE_SIZE=52428800  # 50MB in bytes

# API Configuration
API_TITLE=IntelliClaim RAG API
API_VERSION=1.0.0

# Model Configuration
EMBEDDING_MODEL=llmware/industry-bert-insurance-v0.1
EMBEDDING_FALLBACK_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=openai/gpt-5-2025-08-07

# Processing Settings
CHUNK_SIZE=2000
CHUNK_OVERLAP=100
TOP_K_DOCUMENTS=5
SIMILARITY_THRESHOLD=0.7
MAX_PROCESSING_TIME=30

# Security Settings
ALLOWED_ORIGINS=*
ENABLE_RATE_LIMITING=false
ENABLE_CACHING=true

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_AUDIT_TRAIL=true
ENABLE_EXPLAINABILITY=true
