# IntelliClaim Frontend Environment Variables
# Copy this file to .env and update with your values

# API Configuration
REACT_APP_API_URL=http://localhost:8000

# AWS Configuration (for production)
REACT_APP_AWS_REGION=us-east-1
REACT_APP_S3_BUCKET=your-s3-bucket-name
REACT_APP_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# Analytics and Monitoring
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_GOOGLE_ANALYTICS_ID=

# Feature Flags
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_MOCK_DATA=false

# Application Configuration
REACT_APP_APP_NAME=IntelliClaim
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Performance Configuration
REACT_APP_MAX_FILE_SIZE=52428800
REACT_APP_ALLOWED_FILE_TYPES=.pdf,.docx,.eml

# Security Configuration
REACT_APP_ENABLE_HTTPS_ONLY=false
REACT_APP_CSP_REPORT_URI=

# Development Configuration
GENERATE_SOURCEMAP=false
FAST_REFRESH=true